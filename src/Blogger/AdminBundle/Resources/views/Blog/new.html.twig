{% extends 'BloggerAdminBundle::base.html.twig' %}

{% block jumbotron %}
    <h1>Create new blog post</h1>
{%endblock %}

{% block body -%}
    {{ form_start(form, {'method': 'POST'}) }}

    <div class="form-group">
        {{ form_label(form.title, 'Title:', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.title, {'attr': {'class':'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.blog, 'Blog:', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.blog, {'attr': {'class':'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.image, 'Image:', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.image, {'attr': {'class':'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.tags, 'Tags:', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.tags, {'attr': {'class':'form-control'}}) }}
        </div>
    </div>

    {{ form_widget(form.submit, { 'label': 'Create' , 'attr': {'class':'btn btn-default'}}) }}

    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script src="//cdn.ckeditor.com/4.4.7/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'blogger_blogbundle_blog_blog' );
    </script>
{% endblock %}