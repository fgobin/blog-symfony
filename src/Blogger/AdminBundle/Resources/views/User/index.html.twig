{% extends "BloggerAdminBundle::base.html.twig" %}


{% block jumbotron %}
    <h1>List of all users</h1>
{% endblock %}

{% block body -%}
    <h1>User list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Show</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a>
                </td>
                <td>
                    <a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.username }}</a>
                </td>
                <td>
                    <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                </td>
                <td>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">
                Create a new user
            </a>
        </li>
    </ul>
    {% endblock %}
