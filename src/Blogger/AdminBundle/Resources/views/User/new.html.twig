{% extends "BloggerAdminBundle::base.html.twig" %}

{% block jumbotron %}
    <h1>Create new user</h1>
{% endblock %}

{% block body -%}
    {{ form_start(form, {'method': 'POST'}) }}

        <div class="form-group">
            {{ form_label(form.username, 'Username:', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.email, 'Email:', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.password, 'Password: ', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.password, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>

        {{ form_widget(form.submit, { 'label': 'Create' , 'attr': {'class':'btn btn-default'}}) }}
        {{ form_rest(form) }}

    {{ form_end(form) }}
{% endblock %}
