<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

    <title>{% block title %}Symfony blog Administration{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    {% endblock %}

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

</head>
<body>

<!-- Header block -->
<header class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#blog-navbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
           <a class="navbar-brand" href="{{ path('BloggerAdminBundle_page_homepage') }}">Administration</a>
        </div>
        <div class="collapse navbar-collapse" id="blog-navbar">
            {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN')%}
                {% block navigation %}
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="{{ path('user') }}">
                                Users
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('blog') }}">
                                Blogs
                            </a>
                        </li>

                    </ul>
                {%  endblock %}
                {% block authentication_status %}
                    <ul class="nav navbar-nav pull-right">
                        <li>
                           <p> You are logged in as {{ app.user.username }} </p>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                Logout
                            </a>
                        </li>
                    </ul>
                    <div class="col-sm-3 col-md-3 pull-right">
                        <form class="navbar-form" role="search" action="{{ path('BloggerBlogBundle_blog_search') }}" method="get">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search" name="query" id="srch-term">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                {%  endblock %}
            {% endif %}
        </div>
    </div>
</header>
<!-- /Header block -->


<!-- Content block -->
<div class="container">

    <div class="jumbotron">
        {% block jumbotron %}
        {%  endblock %}
    </div>

    <div class="row">
        <!-- Main content -->
        <div class="col-md-9" id="main">

            {% block body %}{% endblock %}

        </div>
        <!-- /Main content -->

        <!-- Sidebar -->
        <div class="col-md-3" id="sidebar">
            {% block sidebar %}
            {% endblock %}
        </div>
        <!-- /Sidebar -->
    </div>

</div>

{% block javascripts %}{% endblock %}
</body>
</html>