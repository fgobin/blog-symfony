{# src/Blogger/BlogBundle/Resources/views/Page/contact.html.twig #}
{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact symblog</h1>
    </header>

    {% for flashMessage in app.session.flashbag.get('blogger-notice') %}

        <div class="alert alert-success" role="alert">
            {{ flashMessage }}
        </div>

    {% endfor %}

    <p>Want to contact symblog?</p>

    <form action="{{ path('BloggerBlogBundle_contactPost') }}" method="post" {{ form_enctype(form) }}>

        {% if form.body.vars.errors |length > 0 %}
        <div class="alert alert-danger" role="alert">{{ form.body.vars.errors }} </div>
        {% endif %}

        <div class="form-group">
            {{ form_label(form.name, 'Name:', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(form.name, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.email, 'Email:', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.subject, 'Subject: ', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(form.subject, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.body, 'Body: ', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(form.body, {'attr': {'class':'form-control', 'rows':'5'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <button type="submit" class="btn btn-default">Submit</button>
    </form>


{% endblock %}