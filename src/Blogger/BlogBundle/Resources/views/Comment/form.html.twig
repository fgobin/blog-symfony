{# src/Blogger/BlogBundle/Resources/views/Comment/form.html.twig #}

<form action="{{ path('BloggerBlogBundle_comment_create', { 'blog_id' : comment.blog.id } ) }}" method="post" {{ form_enctype(form) }} class="blogger">

    {% if form_errors(form) %}
        <div class="alert alert-danger" role="alert">{{ form_errors(form) }} </div>
    {%  endif %}

    <div class="form-group">
        {{ form_label(form.author, 'Name:', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.author, {'attr': {'class':'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.comment, 'Comment:', {'label_attr': {'class':'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.comment, {'attr': {'class':'form-control'}}) }}
        </div>
    </div>
    {{ form_rest(form) }}
    <p>
        <button type="submit" class="btn btn-primary" role="button" >
            Comment
        </button>
    </p>
</form>